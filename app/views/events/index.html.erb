<div class="row">
  <div class="span12">
    <div class="hero-unit">
      <h1>Pinky is <%= @latest.status %>!</h1>
      <p>Pinky has been <%= @latest.status %> for <%= time_ago_in_words @latest.created_at %>.</p>
    </div>
  </div>
</div>
<div class="row">
  <div class="span5 offset1">
    <p>Pinky's most recent jaunt was for <strong><%= distance_of_time_in_words(*Event.most_recent_outing_events.map(&:created_at)) %></strong>.</p>
  </div>
  <div class="span5">
    <table class="table pull-right">
      <thead>
        <tr>
          <th>Event</th>
          <th>Time</th>
          <th>Source</th>
          <% if admin? %>
            <th>Remove</th>
          <% end %>
        </tr>
      <tbody>
        <% @events.each do |event| %>
          <%= content_tag_for :tr, event do %>
            <td><%= event.status %> <%= arrow(event.status) %></td>
            <td><%= event.created_at.to_s(:short) %></td>
            <td><%= event.source %></td>
            <% if admin? %>
              <td><%= link_to event_path(event), :rel => "nofollow", method: :delete do %><i class="icon icon-remove"></i><span class="admin-link">remove</span><% end %></td>
            <% end %>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
